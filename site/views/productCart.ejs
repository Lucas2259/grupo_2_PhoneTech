<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>

<body>

    <%- include('partials/header') %>

    <!--Titulo-->
    <div class="cartTitle">
        <div class="col-md">
            <h1>Su carrito de compras</h1>
        </div>
    </div>

    <div class="Rtable Rtable--5cols Rtable--collapse" >
        <!--Producto-->
        <div class="Rtable-cell Rtable-cell">
            <div class="row"style="width: 10rem;" >
                <img src="/images/motoe6.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Motorola</h5>
                    <p class="card-text">E6 PLUS</p>
                </div>
            </div>
        </div>
        <!--Cantidad-->
        <div class="Rtable-cell">
            <h5>Cantidad</h5>
            <div class="def-number-input number-input safari_only row m-5">
                <button onclick="calcularMonto(this)" id="menor" class="btn">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-dash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M3.5 8a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.5-.5z"/>
                    </svg>
                </button>
                <input class="quantity form-control" min="0" name="quantity" value="1" type="number" id="cantidad" style="width: 60px; text-align: center">
                <button onclick="calcularMonto(this)" id="mayor" class="btn">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8 3.5a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5H4a.5.5 0 0 1 0-1h3.5V4a.5.5 0 0 1 .5-.5z"/>
                        <path fill-rule="evenodd" d="M7.5 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0V8z"/>
                    </svg>
                </button>
            </div>
            <h5>Stock disponible: </h5>
            <p>300 unidades</p>
        </div>
        <!--valores-->
        <div class="Rtable-cell">
            <div class="valores">
                <h5>Valor unitario</h5>
                <p class="precio">$15.000</p>
                <h5 class="imp">Impuestos agregados</h5>
                <p class="impuestos">$200</p>
            </div>
        </div>
        <!--Total a pagar-->
        <div class="Rtable-cell Rtable-cell">
            <h5 class="total">Total a pagar</h5><label id='total'></label>
                <select name="descuento" class="descuento custom-select">
                    <option value="">codigo de descuento</option>
                </select>

                <select name="Medio de pago" class="medios custom-select">
                    <option value="">tarjeta de credito</option>
                    <option value="">Tarjeta de debito</option>
                    <option value="">Mercadopago</option>
                </select>
                <button href="#" class="btn btn-primary">Finalizar compra</button>
        </div>
        <!--Eliminar compra-->
        <div class="Rtable-cell-eliminar">
            <h5 class="eliminar">Eliminar</h5>
                <button class="btn btn-danger">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                    </svg>
            </button>
        </div>
        
    </div>
    
    <script>
        function calcularMonto(elemento){
            console.log(elemento.id) 
            console.log(document.getElementById('cantidad').value)
            document.getElementById('total').innerHTML ='$2'
            document.getElementById('cantidad').value = 1
        }
    </script>
        <%- include('partials/footer') %>
</body>

</html>