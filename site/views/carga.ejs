                    <input type="text" required>
                    <h4>Descripcion</h4>
                    <textarea name="" id="" cols="35" rows="8" required></textarea>
                    <h4>Caracteristicas técnicas</h4>
                    <textarea name="" id="" cols="35" rows="8" required></textarea>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6 cd2">
